{
  "name": "istanbul-ignore-legacy",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "bin": {
    "istanbul-ignore-legacy": "dist/cli.js"
  },
  "scripts": {
    "test": "jest",
    "build": "rm -rf dist && tsc",
    "lint": "tslint -c tslint.json src/**/*.ts -p tsconfig.json",
    "lint:fix": "npm run lint -- --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix-incubator/istanbul-ignore-legacy.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wix-incubator/istanbul-ignore-legacy/issues"
  },
  "homepage": "https://github.com/wix-incubator/istanbul-ignore-legacy#readme",
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@types/jest": "^24.0.11",
    "@wix/tslint-config-wixstores": "^1.0.23",
    "babel-jest": "^24.5.0",
    "husky": "^1.3.1",
    "jest": "^24.5.0",
    "jest-cli": "^24.5.0",
    "react": "^16.8.6",
    "rimraf": "^2.6.3",
    "tmp": "0.0.33",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.3",
    "tslint": "^5.14.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.3.4000",
    "uuid": "^3.3.2"
  },
  "jest": {
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/src/.*\\.spec\\.ts$"
    ],
    "testRegex": "/src/.*\\.spec\\.ts$",
    "coverageReporters": [
      "html",
      "json"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    }
  }
}
