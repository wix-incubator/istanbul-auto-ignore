{
  "compilerOptions": {
    "esModuleInterop": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "pretty": true,
    "lib": ["es2015", "es2016", "es2017", "esnext.asynciterable"],
    "noEmitHelpers": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "strictBindCallApply": true
  },
  "include": ["src/**/*.ts"]
}